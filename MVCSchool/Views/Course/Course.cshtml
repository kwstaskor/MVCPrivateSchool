@model  IEnumerable<MVCSchool.Models.Course>

@{
    ViewBag.Title = "Courses";
}

<div class="container">
    <h3 class="text-center m-5">Our Courses</h3>
    <div class="row m-2">
        @foreach (var course in Model)
        {

            <div class="m-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><a class="text-decoration-none" href="~/Course/Details/@course.CourseId">@course.Title</a></h5>
                        <ul class="list-unstyled">
                            <li><strong>Stream:</strong> @course.Stream</li>
                            <li><strong>Type:</strong> @course.Type</li>
                            <li><strong>Duration:</strong> @course.Duration</li>
                        </ul>
                        <a href="~/Course/Details/@course.CourseId" class="btn btn-outline-info btn-sm">More Details</a>
                    </div>
                </div>
            </div>

        }
    </div>
</div>