@model MVCSchool.Models.ViewModels.AdminViewModel
@using Microsoft.Ajax.Utilities
@using PagedList.Mvc;


@if (TempData.ContainsKey("ShowAlert"))
{
    if ((bool) TempData["ShowAlert"])
    {

        if (TempData.ContainsKey("StatusDel"))
        {
            <div class="container mt-5">
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>@TempData["StatusDel"].ToString() </strong>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        }
        else if(TempData.ContainsKey("Status"))
        {
            <div class="container mt-5">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@TempData["Status"].ToString() </strong>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        }
    }
}

<div class="row">

    @Html.Partial("_Courses")


    @Html.Partial("_Assignments")

</div>

<hr class="my-4" />

<div class="row">

    @Html.Partial("_Students")

    @Html.Partial("_Trainers")

    @*Return Button*@
    <div class="col-md-6">
        <div class="container pull-left">
            @Html.ActionLink("Return", "Index", "Home", null, new { @class = "btn btn-outline-info btn-lg" })
        </div>
    </div>
</div>


@section scripts
{
    <script src="~/Scripts/MyJS/ResetButtons.js"></script>
}